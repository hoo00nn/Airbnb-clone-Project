mixin rooms(room={}) 
  .room__card
    .card__image
      img.room__img(src=room.image)
    .card__content
      .room__title=room.title
      .room__border
      .room__description=room.description1
      .room__option=room.description2
      .content__footer
        .room__reservation
          span.modal__open.reservation 예약하기
            .modal.hidden
              .modal__overlay
              .modal__content
                  +reservation({
                    price:room.price,
                    maxPerson:room.maxPerson,
                    checkin: checkin,
                    checkout: checkout,
                    personnel: personnel,
                    title: room.title,
                    location: room.location,
                    image: room.image
                  })
        .room__price 
          span ₩#{room.price}
          span /1박
