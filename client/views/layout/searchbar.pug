.searchbar
  .grid__left
  .grid__middle
    form(action="/rooms", method="GET")
      .location
        label.location__wrap(for="location")
          span 위치
          input(type="text", id="location", required, name="location", placeholder="어디로 여행가세요?")
      .checkin
        include ../component/datepicker.pug
        label.checkin__wrap(for="checkin")
          span 체크인
          input(type="text", id="checkin", readonly, required, name="checkin", placeholder="날짜 추가")
      .checkout
        include ../component/datepicker.pug
        label.checkout__wrap(for="checkout")
          span 체크아웃
          input(type="text", id="checkout", readonly, required, name="checkout", placeholder="날짜 추가")
      .personnel
        include ../component/searchbar_guest_modal.pug
        .personnel__wrap
          label(for="personnel").personnel__wrap__left
            span 인원
            input(type="text", id="personnel", readonly, required, name="personnel", placeholder="게스트 추가")
          .search__icon
            button(type="submit")
              img(src="/images/search_white.png")
  .grid__right
  